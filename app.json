{
  "name": "Cyber OTP Core Bot",
  "description": "Live-only OTP forwarding Telegram bot for SMS panels",
  "repository": "https://github.com/yourusername/your-repo",
  "logo": "https://telegra.ph/file/9c7c6b2c3a4e7b5e9c.png",
  "keywords": [
    "telegram",
    "otp",
    "sms",
    "bot",
    "python",
    "cyber"
  ],
  "env": {
    "BOT_TOKEN": {
      "description": "Telegram Bot Token from @BotFather",
      "required": true
    },
    "CHAT_ID": {
      "description": "Telegram Channel or Group ID (e.g. -100xxxxxxxxxx)",
      "required": true
    },
    "PHPSESSID": {
      "description": "Active PHPSESSID cookie from SMS panel",
      "required": true
    },
    "AJAX_URL": {
      "description": "SMS panel AJAX endpoint",
      "value": "http://51.75.55.16/ints/client/res/data_smscdr.php",
      "required": false
    },
    "TZ": {
      "description": "Timezone",
      "value": "Asia/Kolkata",
      "required": false
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "stack": "heroku-22"
}
